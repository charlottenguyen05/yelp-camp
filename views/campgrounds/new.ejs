<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="title text-center">Add Your Campground</h1>
            <form action="/campgrounds/new" method="post" enctype="multipart/form-data" class="needs-validation"
                novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="location" class="form-control" required>
                </div>
                <div class="input-group mb-3" id="price">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                        aria-describedby="price" name="price" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" id="description" name="description" class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Your image</label>
                    <input class="form-control" type="file" id="image" name="imgFiles" required multiple>
                    <div id="fileNames" class="mt-2"></div>
                    <div class="d-grid gap-2 mx-auto">
                        <button type="submit" class="btn btn-danger">Edit campgrounds</button>
                    </div>
            </form>
        </div>
        <script src="/scripts/fileUpload.js"></script>
    </div>