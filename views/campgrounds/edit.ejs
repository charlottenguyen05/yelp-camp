<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="title text-center">Edit <%= camp.title %>
            </h1>
            <form action="/campgrounds/<%= camp._id %>/edit?_method=put" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" class="form-control" value="<%= camp.title %>">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="location" class="form-control" value="<%= camp.location %>">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                        aria-describedby="price" name="price" value="<%= camp.price %>">
                </div>
                <div class="mb-3">
                    <label for="description">Description</label>
                    <textarea type="text" id="description" name="description"
                        class="form-control"><%= camp.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="image">Your Image File</label>
                    <input type="file" name="imgFiles" accept="image/*" class="form-control" id="image" multiple>
                    <div id="fileNames" class="mt-2"></div>
                </div>
                <div class="mb-3">
                    <% if (camp.images.length) { %>
                        <div id="imageList">
                            <div class="mb-2">Delete: </div>
                            <% camp.images.forEach((img, index)=> { %>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                        value="<%= img.filename %>" id="image<%= index %>">
                                    <label class="form-check-label" for="image<%= index %>">
                                        <img crossorigin="anonymous" src="<%= img.path %>" alt="Thumbnail image"
                                            style="width: 100px; height: auto;">
                                    </label>
                                </div>
                                <% })} %>
                        </div>

                </div>
                <div class="d-grid gap-2 mx-auto">
                    <button type="submit" class="btn btn-danger">Edit campgrounds</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/scripts/fileUpload.js"></script>